.col-md-6
	%h2.text-center
		%span{ :'ng-if' => 'idioma == 1' }
			Noticias
		%span{ :'ng-if' => 'idioma == 2' }
			News
		%span{ :'ng-if' => 'idioma == 3' }
			Notícia
	.text-muted.text-center
		%span{ :'ng-if' => 'idioma == 1' }
			Conoce los últimos avances hacia una 
			%strong
				Nueva Agenda Urbana
		%span{ :'ng-if' => 'idioma == 2' }
			Be aware of the latest news regarding the
			%strong
				New Urban Agenda
		%span{ :'ng-if' => 'idioma == 3' }
			Conheça os últimos avanços rumo à
			%strong
				Nova Agenda Urbana
	%ul.info{ :'ng-controller' => "fbCtrl" }
		%li{ :'ng-repeat' => 'post in posts'}
			%a{ :'href' => 'https://facebook.com/{{post.id}}', :'target' => '_blank' }
				{{post.message | limitTo : 50 }} {{post.message.length > 50 ? '...' : '' }}